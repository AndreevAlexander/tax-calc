<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TaxCalculator.Desktop.Controls">
    <Design.PreviewWith>
        <controls:NavigationView />
    </Design.PreviewWith>

    <Style Selector="controls|NavigationView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <SplitView>
                    <SplitView.Pane>
                        <controls:NavigationMenu>
                            <ItemsControl ItemsPanel="{TemplateBinding ItemsPanel}" 
                                          Items="{TemplateBinding Items}"/>
                        </controls:NavigationMenu>
                    </SplitView.Pane>
                    <SplitView.Content>
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </SplitView.Content>
                </SplitView>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="controls|NavigationView SplitView">
        <Setter Property="PaneBackground" Value="#F2F2F2" />
        <Setter Property="OpenPaneLength" Value="300" />
    </Style>
</Styles>
