<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TaxCalculator.Desktop.Controls">
    <Design.PreviewWith>
        <controls:NavigationView IsPaneOpen="True"
                                 OpenPaneLength="300"
                                 CompactPaneLength="50">
            <controls:NavigationMenuItem Title="Item 1" />
            <controls:NavigationMenuItem Title="Item 2" />
            <controls:NavigationMenuItem Title="Item 3" />
            <controls:NavigationView.Content>
                <TextBlock Text="Content" />
            </controls:NavigationView.Content>
        </controls:NavigationView>
    </Design.PreviewWith>

    <Style Selector="controls|NavigationView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <SplitView OpenPaneLength="{TemplateBinding OpenPaneLength}"
                           CompactPaneLength="{TemplateBinding CompactPaneLength}"
                           IsPaneOpen="{TemplateBinding IsPaneOpen}"
                           DisplayMode="{TemplateBinding DisplayMode}">
                    <SplitView.Pane>
                        <controls:NavigationMenu Width="{TemplateBinding OpenPaneLength}">
                            <ItemsControl ItemsPanel="{TemplateBinding ItemsPanel}" 
                                          Items="{TemplateBinding Items}"/>
                        </controls:NavigationMenu>
                    </SplitView.Pane>
                    <SplitView.Content>
                        <Border Classes="ContentContainer">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                        </Border>
                    </SplitView.Content>
                </SplitView>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="controls|NavigationView SplitView">
        <Setter Property="PaneBackground" Value="#F2F2F2" />
    </Style>
    
    <Style Selector="Border.ContentContainer">
        <Setter Property="Padding" Value="30" />
    </Style>
</Styles>
