<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:TaxCalculator.Desktop.Controls"
             xmlns:vm="using:TaxCalculator.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TaxCalculator.Desktop.Views.TaxProfileView">
    
    <Grid RowDefinitions="Auto,10,*"
          ColumnDefinitions="Auto,*">
        <TextBlock Text="Tax Profiles"
                   FontSize="18" />

		<StackPanel Grid.Column="1"
					Grid.Row="0"
					Classes="CrudActions">

			<Button Content="Edit" 
			        Command="{Binding EditCommand, Mode=TwoWay}"/>
			
			<Button Content="Remove" 
			        Command="{Binding RemoveCommand, Mode=TwoWay}"/>
			
			<Button Content="Add" />
		</StackPanel>
        
        <controls:DataGridExt Grid.Row="2"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Sortable="True"
                              ResizeableColumns="True"
                              SelectedItem="{Binding SelectedTaxProfile, Mode=TwoWay}"
                              Items="{Binding TaxProfiles, Mode=TwoWay}" />
    </Grid>
</UserControl>
