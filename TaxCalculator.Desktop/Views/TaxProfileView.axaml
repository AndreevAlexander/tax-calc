<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:TaxCalculator.Desktop.Controls"
             xmlns:reactiveUi="http://reactiveui.net"
             xmlns:desktop="clr-namespace:TaxCalculator.Desktop"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TaxCalculator.Desktop.Views.TaxProfileView">
    
	<reactiveUi:RoutedViewHost Router="{Binding Router}">
		<reactiveUi:RoutedViewHost.DefaultContent>
			<controls:CrudDataGrid Title="Tax Profiles"
			                       EditCommand="{Binding EditCommand, Mode=TwoWay}"
			                       RemoveCommand="{Binding RemoveCommand, Mode=TwoWay}"
			                       Sortable="True"
			                       ResizeableColumns="True"
			                       IsReadOnly="True"
			                       IsSaveButtonVisible="False"
			                       IsEditButtonVisible="True"
			                       SelectedItem="{Binding SelectedTaxProfile, Mode=TwoWay}"
			                       Items="{Binding TaxProfiles^}"/>
		</reactiveUi:RoutedViewHost.DefaultContent>
		<reactiveUi:RoutedViewHost.ViewLocator>
			<desktop:AppViewLocator/>
		</reactiveUi:RoutedViewHost.ViewLocator>
	</reactiveUi:RoutedViewHost>
</UserControl>
