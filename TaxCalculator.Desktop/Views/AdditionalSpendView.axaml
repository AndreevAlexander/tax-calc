<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:TaxCalculator.Desktop.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TaxCalculator.Desktop.Views.AdditionalSpendView">
    <controls:CrudDataGrid Title="Manage Additional Spends"
                           Sortable="True"
                           ResizeableColumns="True"
                           IsReadOnly="False"
                           IsEditButtonVisible="False"
                           IsSaveButtonVisible="True"
                           SaveCommand="{Binding SaveAdditionalSpendsCommand}"
                           AddCommand="{Binding AddAdditionalSpendCommand}"
                           RemoveCommand="{Binding RemoveAdditionalSpendCommand}"
                           SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                           Items="{Binding AdditionalSpends^}" />
</UserControl>